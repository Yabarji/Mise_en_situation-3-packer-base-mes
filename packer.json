{
  "description": "Mise en situation 3 - Packer Example",
  "min_packer_version": "1.3.5",
  "builders": [
    {
      "name": "packer-ingecloud-01",
      "communicator": "ssh",
      "type": "scaleway",
      "organization_id": "{{user `organization_id`}}",
      "api_token": "{{user `api_token`}}",
      "image": "f974feac-abae-4365-b988-8ec7d1cec10d",
      "image_name": "packer-ingecloud-01",
      "region": "par1",
      "commercial_type": "DEV1-M",
      "ssh_username": "root"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get update",
	"apt-get install -y apt-utils",
        "apt-get install -y tree && apt-get install -y htop",
        "useradd -m -u 6000 {{user `user_name`}}"
      ]
    }
  ],
  "variables": {
    "user_name":"packer-form",
    "organization_id": "{{env `organization_id`}}",
    "api_token": "{{env `api_token`}}"
  }
}
